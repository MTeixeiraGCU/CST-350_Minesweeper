@model IEnumerable<MinesweeperApp.Models.Cell>

<style>
    .game-button {
        position: relative;
        text-align: center;
        width: 10%;
        border: none;
    }

    .button-image {
        width: 100%;
    }

    .grid-area {
        display: flex;
        flex-wrap: wrap;
    }

    .line-break {
        flex-basis: 100%;
        height: 0;
    }

    .centered-text {
        position: absolute;
        color: #fff;
        font-size: 1.5vw;
        font-family: 'Segment7Standard';
        font-weight: bold;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -65%);
    }
</style>

@{
    string[] imageNames = { "blue-button.png", "red-button.png", "bomb.png", "flag.png"};
}

<form style="margin: auto; width: 80%">
    <div class="grid-area">

        @for (int i = 0; i < Model.Count(); i++)
        {
            if (i % ViewBag.Width == 0)
            {
                <div class="line-break"></div>
            }
            <button class="game-button" type="submit" value="@Model.ElementAt(i).Id" name="buttonNumber" asp-controller="Game" asp-action="HandleButtonClick">
                <img class="button-image" src="~/img/@imageNames[Model.ElementAt(i).Visited ? 0 : 1]" />
                <div class="centered-text">
                    @if (Model.ElementAt(i).Visited && Model.ElementAt(i).LiveNeighbors != 0)
                    {
                        @Model.ElementAt(i).LiveNeighbors
                    }
                </div>
            </button>
        }

    </div>
    <p>@ViewBag.Message</p>
</form>